---
// SLi Project - Astro Component
---
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SLi Project - Your Digital Transformation Partner</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body>
    <nav>
        <div class="container nav-flex">
            <img src="/logo.jpg" alt="SLi Logo" class="main-logo">
            <div class="nav-links">
                <a href="#services">Services</a>
                <a href="https://wa.me/6285172076698" class="btn-nav">Contact Us</a>
            </div>
        </div>
    </nav>

    <main>
        <section class="hero">
            <div class="container">
                <span class="badge">Future Technology</span>
                <h1>Welcome to the future of <br/><span class="gradient-text">business automation</span></h1>
                <p class="subtitle">SLi Project delivers cutting-edge digital solutions powered by artificial intelligence and advanced technology.</p>
                <div class="hero-actions">
                    <a href="https://wa.me/6285172076698" class="btn-primary">Hubungi WhatsApp</a>
                    <a href="mailto:sliproject.id@gmail.com" class="btn-secondary">Kirim Email</a>
                </div>
            </div>
        </section>

        <section id="services" class="services">
            <div class="container">
                <h2 class="section-title">Comprehensive Digital Solutions</h2>
                <div class="service-grid">
                    <div class="service-card">
                        <i class="fa-solid fa-robot"></i>
                        <h3>AI Sales Automation</h3>
                        <p>Transform your sales process with intelligent automation that identifies opportunities and closes deals faster.</p>
                    </div>
                    <div class="service-card">
                        <i class="fa-solid fa-headset"></i>
                        <h3>AI Customer Service</h3>
                        <p>Deliver exceptional 24/7 support with AI-powered assistants that resolve queries instantly.</p>
                    </div>
                    <div class="service-card">
                        <i class="fa-solid fa-chart-line"></i>
                        <h3>Smart Management</h3>
                        <p>Streamline operations with tools that provide real-time insights and automated decision support.</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="stats">
            <div class="container stat-grid">
                <div class="stat-box"><h2>24/7</h2><p>Always Available</p></div>
                <div class="stat-box"><h2>100%</h2><p>Customized</p></div>
                <div class="stat-box"><h2>10X</h2><p>Efficiency Boost</p></div>
            </div>
        </section>
    </main>

    <div id="chat-container">
        <button id="chat-trigger" class="chat-btn">
            <i class="fa-solid fa-comment-dots"></i> Chat AI
        </button>
        <div id="chat-window" class="chat-window">
            <div class="chat-header">
                <strong>SLi Chatbot AI</strong>
                <button id="close-chat">&times;</button>
            </div>
            <div id="chat-messages" class="chat-body">
                <div class="msg bot">Halo! Saya asisten AI SLi Project. Ada yang bisa saya bantu?</div>
            </div>
            <form id="chat-form" class="chat-footer">
                <input type="text" id="user-input" placeholder="Tulis pesan..." required />
                <button type="submit"><i class="fa-solid fa-paper-plane"></i></button>
            </form>
        </div>
    </div>

    <style>
        :root { --primary: #0070f3; --dark: #000814; --gray: #64748b; }
        * { box-sizing: border-box; margin: 0; padding: 0; font-family: 'Inter', sans-serif; scroll-behavior: smooth; }
        body { background: #ffffff; color: var(--dark); overflow-x: hidden; }
        .container { max-width: 1100px; margin: 0 auto; padding: 0 20px; }
        
        nav { padding: 20px 0; border-bottom: 1px solid #f1f5f9; position: sticky; top: 0; background: rgba(255,255,255,0.8); backdrop-filter: blur(10px); z-index: 1000; }
        .nav-flex { display: flex; justify-content: space-between; align-items: center; }
        .main-logo { height: 45px; }
        .nav-links a { text-decoration: none; color: var(--dark); font-weight: 600; margin-left: 25px; font-size: 14px; }
        .btn-nav { background: var(--dark); color: white !important; padding: 10px 20px; border-radius: 8px; }

        .hero { padding: 100px 0; text-align: center; background: radial-gradient(circle at top, #f0f7ff 0%, #ffffff 100%); }
        .badge { background: #e0f0ff; color: var(--primary); padding: 6px 16px; border-radius: 20px; font-size: 12px; font-weight: 700; text-transform: uppercase; margin-bottom: 24px; display: inline-block; }
        h1 { font-size: 56px; font-weight: 800; line-height: 1.1; margin-bottom: 20px; color: #0f172a; }
        .gradient-text { background: linear-gradient(90deg, #0070f3, #00d4ff); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }
        .subtitle { font-size: 19px; color: var(--gray); max-width: 750px; margin: 0 auto 40px; }
        .hero-actions { display: flex; gap: 15px; justify-content: center; }
        .btn-primary { background: var(--primary); color: white; padding: 16px 32px; border-radius: 12px; text-decoration: none; font-weight: 700; box-shadow: 0 10px 20px rgba(0,112,243,0.2); transition: 0.3s; }
        .btn-secondary { background: #f1f5f9; color: var(--dark); padding: 16px 32px; border-radius: 12px; text-decoration: none; font-weight: 700; transition: 0.3s; }
        .btn-primary:hover { transform: translateY(-3px); }

        .services { padding: 100px 0; background: #fcfcfc; }
        .section-title { text-align: center; font-size: 32px; font-weight: 800; margin-bottom: 60px; }
        .service-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 30px; }
        .service-card { background: white; padding: 40px; border-radius: 24px; border: 1px solid #f1f5f9; transition: 0.4s; }
        .service-card:hover { border-color: var(--primary); transform: translateY(-10px); box-shadow: 0 20px 40px rgba(0,0,0,0.05); }
        .service-card i { font-size: 40px; color: var(--primary); margin-bottom: 25px; display: block; }
        .service-card h3 { margin-bottom: 15px; font-size: 20px; }
        .service-card p { color: var(--gray); font-size: 15px; line-height: 1.6; }

        .stats { padding: 80px 0; background: var(--dark); color: white; }
        .stat-grid { display: grid; grid-template-columns: repeat(3, 1fr); text-align: center; }
        .stat-box h2 { font-size: 48px; color: var(--primary); margin-bottom: 10px; }
        .stat-box p { font-size: 14px; opacity: 0.8; }

        /* Chatbot Style */
        .chat-btn { position: fixed; bottom: 30px; right: 30px; background: var(--primary); color: white; border: none; padding: 15px 25px; border-radius: 50px; font-weight: 700; cursor: pointer; box-shadow: 0 10px 25px rgba(0,112,243,0.4); z-index: 1001; }
        .chat-window { position: fixed; bottom: 100px; right: 30px; width: 360px; height: 500px; background: white; border-radius: 20px; display: none; flex-direction: column; box-shadow: 0 20px 50px rgba(0,0,0,0.2); z-index: 1001; border: 1px solid #eee; overflow: hidden; }
        .chat-window.show { display: flex; }
        .chat-header { background: var(--primary); color: white; padding: 20px; display: flex; justify-content: space-between; align-items: center; }
        .chat-body { flex: 1; padding: 20px; overflow-y: auto; background: #f8fafc; font-size: 14px; display: flex; flex-direction: column; gap: 10px; }
        .msg { padding: 12px 16px; border-radius: 15px; max-width: 85%; line-height: 1.4; }
        .bot { background: white; align-self: flex-start; color: var(--dark); border: 1px solid #e2e8f0; }
        .user { background: var(--primary); align-self: flex-end; color: white; }
        .chat-footer { padding: 15px; border-top: 1px solid #f1f5f9; display: flex; gap: 10px; }
        .chat-footer input { flex: 1; border: 1px solid #e2e8f0; padding: 12px; border-radius: 10px; outline: none; }
        .chat-footer button { background: var(--primary); color: white; border: none; width: 45px; border-radius: 10px; cursor: pointer; }

        @media (max-width: 768px) {
            h1 { font-size: 38px; }
            .stat-grid { grid-template-columns: 1fr; gap: 40px; }
            .hero-actions { flex-direction: column; }
            .chat-window { width: 90%; right: 5%; bottom: 90px; }
        }
    </style>

    <script>
        const chatTrigger = document.getElementById('chat-trigger');
        const chatWindow = document.getElementById('chat-window');
        const closeChat = document.getElementById('close-chat');
        const chatForm = document.getElementById('chat-form');
        const chatMessages = document.getElementById('chat-messages');
        const userInput = document.getElementById('user-input');

        chatTrigger.onclick = () => chatWindow.classList.toggle('show');
        closeChat.onclick = () => chatWindow.classList.remove('show');

        chatForm.onsubmit = async (e) => {
            e.preventDefault();
            const text = userInput.value.trim();
            if(!text) return;

            addMessage(text, 'user');
            userInput.value = '';

            try {
                const response = await fetch('https://n8n.aleshatour.my.id/webhook/botwebsite', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ message: text })
                });
                const data = await response.json();
                addMessage(data.reply || "Terima kasih, tim kami akan segera merespons.", 'bot');
            } catch (err) {
                addMessage("Koneksi sedang bermasalah. Hubungi kami via WhatsApp.", 'bot');
            }
        };

        function addMessage(text, sender) {
            const div = document.createElement('div');
            div.className = `msg ${sender}`;
            div.textContent = text;
            chatMessages.appendChild(div);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }
    </script>
</body>
</html>