---
// SLi Project - Final Script 2026
---
<html lang="id">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>SLi Project | AI & Digital Solutions</title>
		<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;700;800&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
	</head>
	<body>
		<main>
			<section class="hero">
				<div class="content">
					<div class="badge">Future Technology</div>
					<h1>SLi <span class="blue-text">Project</span></h1>
					<p class="tagline">Digitalisasi & Otomatisasi AI untuk membantu segala kesulitan perusahaan Anda.</p>
					<div class="btn-group">
						<a href="https://wa.me/6285172076698" class="btn-wa" target="_blank">Hubungi WhatsApp</a>
						<a href="mailto:sliproject.id@gmail.com" class="btn-email">Kirim Email</a>
					</div>
				</div>
			</section>
			<button id="openChatBtn" class="admin-float"><span>Hubungi Admin</span></button>
			<div id="chatPopup" class="chat-popup">
				<div class="chat-header"><h3>SLi Chatbot AI</h3><button id="closeChatBtn">&times;</button></div>
				<div class="chat-body" id="chatBody"><div class="message bot-message">Halo! Ada yang bisa saya bantu?</div></div>
				<form id="chatForm" class="chat-footer">
					<input type="text" id="chatInput" placeholder="Ketik pesan..." autocomplete="off">
					<button type="submit">Kirim</button>
				</form>
			</div>
		</main>
		<script>
			const openBtn = document.getElementById('openChatBtn');
			const closeBtn = document.getElementById('closeChatBtn');
			const popup = document.getElementById('chatPopup');
			const form = document.getElementById('chatForm');
			const input = document.getElementById('chatInput');
			const body = document.getElementById('chatBody');

			openBtn.onclick = () => popup.classList.add('active');
			closeBtn.onclick = () => popup.classList.remove('active');

			form.onsubmit = async (e) => {
				e.preventDefault();
				const msg = input.value.trim();
				if (!msg) return;
				appendMsg(msg, 'user-message');
				input.value = '';
				try {
					const res = await fetch('https://n8n.aleshatour.my.id/webhook/botwebsite', {
						method: 'POST',
						headers: { 'Content-Type': 'application/json' },
						body: JSON.stringify({ message: msg })
					});
					const data = await res.json();
					appendMsg(data.reply || "Pesan diterima.", 'bot-message');
				} catch {
					appendMsg("Gagal terhubung ke AI.", 'bot-message');
				}
			};

			function appendMsg(text, type) {
				const div = document.createElement('div');
				div.className = `message ${type}`;
				div.textContent = text;
				body.appendChild(div);
				body.scrollTop = body.scrollHeight;
			}
		</script>
	</body>
</html>

<style>
	:root { --bg: #020617; --primary: #3b82f6; --text: #f8fafc; }
	* { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Plus Jakarta Sans', sans-serif; }
	body { background: var(--bg); color: var(--text); }
	.hero { min-height: 85vh; display: flex; align-items: center; justify-content: center; text-align: center; }
	.blue-text { color: var(--primary); }
	.tagline { color: #94a3b8; margin: 40px auto 80px; max-width: 600px; line-height: 1.8; }
	.btn-group { display: flex; gap: 20px; justify-content: center; }
	.btn-wa { background: #22c55e; color: white; padding: 15px 30px; border-radius: 10px; text-decoration: none; }
	.btn-email { background: white; color: black; padding: 15px 30px; border-radius: 10px; text-decoration: none; }
	.admin-float { position: fixed; bottom: 30px; right: 30px; background: var(--primary); color: white; border: none; padding: 12px 25px; border-radius: 50px; cursor: pointer; }
	.chat-popup { position: fixed; bottom: 90px; right: 30px; width: 320px; height: 400px; background: #1e293b; border-radius: 15px; display: none; flex-direction: column; border: 1px solid #334155; }
	.chat-popup.active { display: flex; }
	.chat-header { background: var(--primary); padding: 15px; border-radius: 15px 15px 0 0; display: flex; justify-content: space-between; }
	.chat-body { flex: 1; padding: 15px; overflow-y: auto; display: flex; flex-direction: column; gap: 10px; }
	.message { padding: 10px; border-radius: 8px; font-size: 0.9rem; }
	.bot-message { background: #334155; align-self: flex-start; }
	.user-message { background: var(--primary); align-self: flex-end; }
	.chat-footer { padding: 10px; display: flex; border-top: 1px solid #334155; }
	.chat-footer input { flex: 1; background: #0f172a; border: none; color: white; padding: 8px; border-radius: 4px; outline: none; }
</style>