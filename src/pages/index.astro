<style>
	/* Style sama seperti sebelumnya agar tampilan tetap keren */
	:root { --bg: #020617; --primary: #3b82f6; --text: #f8fafc; }
	* { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Plus Jakarta Sans', sans-serif; }
	body { background-color: var(--bg); color: var(--text); }
	.hero { height: 100vh; display: flex; align-items: center; justify-content: center; text-align: center; background: radial-gradient(circle at 50% 50%, #1e293b 0%, #020617 100%); }
	.blue-text { color: var(--primary); text-shadow: 0 0 30px rgba(59, 130, 246, 0.5); }
	.btn-group { display: flex; gap: 16px; justify-content: center; }
	.btn-wa { background: #22c55e; color: white; padding: 16px 32px; border-radius: 12px; text-decoration: none; font-weight: bold; display: flex; align-items: center; gap: 10px; }
	.btn-email { background: white; color: black; padding: 16px 32px; border-radius: 12px; text-decoration: none; font-weight: bold; display: flex; align-items: center; gap: 10px; }
	.services { padding: 50px 24px; max-width: 1200px; margin: 0 auto; }
	.grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 32px; }
	.card { background: #0f172a; padding: 40px; border-radius: 24px; text-align: center; border: 1px solid rgba(255, 255, 255, 0.05); }
	.icon { font-size: 40px; color: var(--primary); margin-bottom: 20px; }
	.wa-float { position: fixed; bottom: 32px; right: 32px; background: #22c55e; width: 64px; height: 64px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-size: 30px; text-decoration: none; }
</style>