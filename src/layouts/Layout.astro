    <script>
        const chatTrigger = document.getElementById('chat-trigger');
        const chatWindow = document.getElementById('chat-window');
        const closeChat = document.getElementById('close-chat');
        const chatForm = document.getElementById('chat-form');
        const chatMessages = document.getElementById('chat-messages');
        const userInput = document.getElementById('user-input');

        // Logic Session ID
        if (!localStorage.getItem('chatId')) {
            localStorage.setItem('chatId', "sess_" + Math.random().toString(36).substring(7));
        }
        const sessionId = localStorage.getItem('chatId');

        chatTrigger.onclick = () => chatWindow.classList.toggle('show');
        closeChat.onclick = () => chatWindow.classList.remove('show');

        chatForm.onsubmit = async (e) => {
            e.preventDefault();
            const messageText = userInput.value.trim();
            if(!messageText) return;

            // 1. Tampilkan pesan USER (Biru)
            addMessage(messageText, 'user');
            userInput.value = '';

            try {
                const response = await fetch('https://n8n.aleshatour.my.id/webhook/CHATBOT_SLIPROJECT', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ 
                        chatInput: messageText, 
                        chatId: sessionId 
                    })
                });
                
                const data = await response.json();
                
                // Ambil reply dari webhook
                const botReply = data.reply || data.output || data.message || "Maaf, server sedang sibuk.";
                
                // 2. Tampilkan balasan BOT (Abu-abu)
                addMessage(botReply, 'bot');

            } catch (err) {
                console.error(err);
                addMessage("Maaf, koneksi bermasalah.", 'bot');
            }
        };

        // Fungsi Tambah Pesan yang Membedakan Warna
        function addMessage(text, sender) {
            const div = document.createElement('div');
            // Menentukan apakah class 'user' atau 'bot'
            div.className = `msg ${sender}`;
            div.textContent = text;
            chatMessages.appendChild(div);
            
            // Auto scroll ke bawah
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }
    </script>
